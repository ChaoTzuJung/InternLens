.btnContainer
    margin-top: 30px
    width: 100%
    max-width: 100%
    display: flex
    justify-content: space-around
    align-items: center
    & div
        width: calc(50% - 10px)
        display: flex
        flex-direction: column
        justify-content: center
        align-items: center
        padding: 10px 20px
        border: 1px solid black
        border-radius: 2px
        cursor: pointer
        &:nth-child(1)
            color: #fc636b
            border-color: #fc636b
        &:nth-child(2)
            color: #0AF
            border-color: #0AF
.grommetux-form-field--focus
    .grommetux-form-field__contents
        border: none !important
        box-shadow: none !important
        input
            border: none !important
            box-shadow: none !important

.userInfoContainer
    display: flex
    flex-direction: column
    align-items: center
    .userInfo
        display: flex
        flex-direction: column
        align-items: center
        .imgContainer
            max-width: 100px
            max-height: 100px
            border-radius: 50%
            overflow: hidden
            img
                width: 100%
                height: 100%
    .changeName
        cursor: pointer
        margin: 10px 0
        padding: 5px 20px
        border-radius: 2px
        border: 1px solid black

.postContainer
    margin-top: 30px
    width: 90%
    max-width: 1024px
    padding: 20px
    border-radius: 2px
    border: 1px solid black
    ul
        margin: 0
        h2
            font-weight: bold !important
        a
            text-decoration: none!important
            .favoritePost
                margin-top: 10px
                max-width: 100% !important
                display: flex
                flex-direction: column
                align-items: flex-start
                padding: 10px 20px
                cursor: pointer
                border-radius: 5px
                background: white
                transition: all 0.25s ease
                h3
                    font-weight: bold !important
                    margin: 0 10px 0 0
                    width: auto
                    span
                        font-size: 16px
                        font-weight: normal
                        color: #075ca6
                        opacity: 0.75
                p
                    line-height: 2 !important
                    margin: 0px !important
                    max-width: 100% !important
            &:hover
                .favoritePost
                    transition: all 0.25s ease
                    background: #EFEFEF
                    span,
                    h3,
                    p
                        box-shadow: none !important
                        text-decoration: none!important
